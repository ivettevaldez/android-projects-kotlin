<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exercise3_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exercises.exercise3.Exercise3Fragment">

    <Button
        android:id="@+id/exercise3_button_count_seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/white"
        android:padding="24dp"
        android:text="@string/exercise3_count_seconds" />

    <TextView
        android:id="@+id/exercise3_text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/exercise3_button_count_seconds"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/exercise3_zero_seconds" />
</RelativeLayout>