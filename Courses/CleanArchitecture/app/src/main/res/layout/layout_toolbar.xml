<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/toolbar_frame_buttons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <ImageButton
            android:id="@+id/toolbar_button_navigate_up"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/content_navigate_up"
            android:padding="16dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_arrow_left_white"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/toolbar_button_menu"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/content_menu"
            android:padding="16dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_menu_white"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/toolbar_text_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/toolbar_button_location"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/content_location"
        android:padding="16dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_map_marker_white"
        android:visibility="gone" />

</LinearLayout>