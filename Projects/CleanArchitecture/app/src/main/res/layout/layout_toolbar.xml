<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700">

    <FrameLayout
        android:id="@+id/toolbar_frame_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <ImageButton
            android:id="@+id/toolbar_button_back"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@android:color/transparent"
            android:padding="16dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_arrow_left_white"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/toolbar_button_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:padding="16dp"
            android:scaleType="center"
            android:src="@mipmap/ic_arrow_left_white"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/toolbar_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/toolbar_frame_buttons"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>