<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.SATurnus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:listDivider">@color/black</item>

        <item name="bottomSheetDialogTheme">@style/Theme.BottomSheetDialogTheme</item>
    </style>

    <style name="Theme.NoActionBar" parent="Theme.SATurnus">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/color_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/color_primary</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/Theme.TabTextAppearance</item>
    </style>

    <style name="Theme.DrawerLayout" parent="Theme.SATurnus">
        <item name="android:background">@color/color_primary</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/aluminium</item>
        <item name="itemIconPadding">@dimen/nav_item_padding</item>
    </style>

    <style name="Theme.DotStepperStyle" parent="Theme.SATurnus">
        <item name="android:background">@color/color_primary_variant</item>
        <item name="ms_stepperType">dots</item>
        <item name="ms_bottomNavigationBackground">@color/color_primary</item>
        <item name="ms_inactiveStepColor">@color/shuttle_grey</item>
        <item name="ms_completeButtonColor">@color/color_secondary</item>
        <item name="ms_backButtonText">@string/action_back</item>
        <item name="ms_nextButtonText">@string/action_next</item>
        <item name="ms_completeButtonText">@string/action_save</item>
    </style>

    <style name="Theme.TabTextAppearance" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/text_tab</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Theme.BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppTheme.ModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppTheme.ModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/aluminium</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="Theme.BottomSheetButtonTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/color_secondary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Theme.TextInputLayout" parent="">
        <item name="android:background">@null</item>
        <item name="android:height">48dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">@color/link_water</item>
        <item name="boxBackgroundColor">@color/link_water</item>
        <item name="placeholderTextColor">@color/aluminium</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/aluminium</item>
    </style>

    <style name="Theme.ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/color_secondary</item>
        <item name="backgroundTint">@color/color_secondary</item>
        <item name="colorPrimary">@color/color_secondary</item>
        <item name="colorOnSurface">@color/color_secondary_variant</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/button_primary_padding</item>
    </style>

    <style name="Theme.ButtonPrimarySmall" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/color_secondary</item>
        <item name="backgroundTint">@color/color_secondary</item>
        <item name="colorPrimary">@color/color_secondary</item>
        <item name="colorOnSurface">@color/color_secondary_variant</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/button_primary_small_padding</item>
    </style>

    <style name="Theme.ButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/color_primary_variant</item>
        <item name="backgroundTint">@color/color_primary</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnSurface">@color/color_secondary_variant</item>
        <item name="android:textColor">@color/color_secondary</item>
        <item name="android:padding">24dp</item>
    </style>
</resources>