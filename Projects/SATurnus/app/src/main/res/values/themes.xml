<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.SATurnus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NoActionBar" parent="Theme.SATurnus">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/color_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/color_primary</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/Theme.TabTextAppearance</item>
    </style>

    <style name="Theme.DrawerLayout" parent="Theme.SATurnus">
        <item name="android:background">@color/color_primary</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/aluminium</item>
        <item name="itemIconPadding">@dimen/nav_item_padding</item>
    </style>

    <style name="Theme.TabTextAppearance" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/text_tab</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
        <!--<item name="android:fontFamily">@font/circular_std_medium</item>-->
    </style>

</resources>