<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".screens.invoices.form.InvoiceFormFragment">

    <include
        android:id="@+id/invoice_form_toolbar"
        layout="@layout/element_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/invoice_form_progress"
        layout="@layout/element_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/invoice_form_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_primary"
                android:padding="@dimen/screen_padding"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <include
                    android:id="@+id/invoice_form_person_issuing"
                    layout="@layout/element_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.legacy.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp"/>

                <include
                    android:id="@+id/invoice_form_person_receiver"
                    layout="@layout/element_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.legacy.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_primary"
                android:padding="@dimen/screen_padding">

                <Button
                    android:id="@+id/invoice_form_button_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/Theme.ButtonPrimary"
                    android:text="@string/action_save"
                    android:textColor="@color/white"/>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>