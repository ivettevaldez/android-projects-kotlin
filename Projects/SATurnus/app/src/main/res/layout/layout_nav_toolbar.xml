<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/toolbar_frame_buttons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <ImageButton
            android:id="@+id/toolbar_button_navigate_up"
            android:layout_width="@dimen/toolbar_height"
            android:layout_height="@dimen/toolbar_height"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:contentDescription="@string/content_navigate_up"
            android:padding="16dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_arrow_left_dark"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/toolbar_button_menu"
            android:layout_width="@dimen/toolbar_height"
            android:layout_height="@dimen/toolbar_height"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:contentDescription="@string/content_menu"
            android:padding="16dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_menu_dark"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/toolbar_text_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:padding="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/color_primary_text"
        android:textSize="@dimen/text_bigger"
        android:textStyle="bold"/>

</LinearLayout>