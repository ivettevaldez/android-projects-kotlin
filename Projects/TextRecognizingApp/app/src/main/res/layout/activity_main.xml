<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_image_photo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal|top"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/main_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_image_photo"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="24dp"
        android:text="@string/main_recognized"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />


    <TextView
        android:id="@+id/main_text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_text_title"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/main_text_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:text="@string/main_take_picture"
        android:textSize="20sp"
        android:textStyle="bold" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_fab"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/colorAccent"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:cropToPadding="false"
        android:focusable="true"
        android:foregroundTint="@color/san_felix"
        android:src="@mipmap/ic_camera_white"
        app:fabSize="auto"
        tools:layout_editor_absoluteX="335dp"
        tools:layout_editor_absoluteY="668dp" />

</RelativeLayout>