<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ivettevaldez.dependencyinjection">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".common.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DependencyInjection"
        tools:ignore="AllowBackup">

        <activity
            android:name=".screens.questionslist.QuestionsListActivity"
            android:theme="@style/Theme.DependencyInjection.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".screens.questiondetails.QuestionDetailsActivity"
            android:theme="@style/Theme.DependencyInjection.NoActionBar" />

    </application>

</manifest>