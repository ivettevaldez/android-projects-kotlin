<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionBarTheme">@style/ActionBarTitleText</item>

        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBarTitleText" parent="AppTheme.NoActionBar">
        <item name="android:actionMenuTextColor">@color/charcoal_grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextLabel" parent="AppTheme.NoActionBar">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/steel_grey_50</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">@color/charcoal_grey</item>
    </style>

</resources>
